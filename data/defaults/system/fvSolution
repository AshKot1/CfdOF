%[_header%]
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver           GAMG;
        tolerance        1e-7;
        relTol           0.01;
        smoother         GaussSeidel;
        nPreSweeps       0;
        nPostSweeps      2;
        cacheAgglomeration on;
        agglomerator     faceAreaPair;
        nCellsInCoarsestLevel 10;
        mergeLevels      1;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    Phi
    {
        $p;
    }

    U
    {
        solver           smoothSolver;
        smoother         GaussSeidel;
        tolerance        1e-8;
        relTol           0.1;
        nSweeps          1;
    }

    UFinal
    {
        $U;
        relTol          0;
    }

    "(k|epsilon|omega|f|v2)"
    {
        solver           smoothSolver;
        smoother         GaussSeidel;
        tolerance        1e-8;
        relTol           0.1;
        nSweeps          1;
    }

    "(k|epsilon|omega|f|v2)Final"
    {
        $k;
        relTol          0;
    }

    nuTilda
    {
       solver          smoothSolver;
       smoother        GaussSeidel;
       nSweeps         2;
       tolerance       1e-08;
       relTol          0.1;
    }

    nuTildaFinal
    {
        $nuTilda;
        relTol          0;
    }
}

SIMPLE
{
    // Non-orthogonal correctors for robustness on tet meshes. Porous baffles require a
    // higher number of corrections.
    nNonOrthogonalCorrectors 5;

    consistent no;  // Setting this impairs stability of porous baffles
    residualControl
    {
        p %(solver/convergenceCriteria%);
        U %(solver/convergenceCriteria%);
        "(k|epsilon|omega|f|v2|nuTilda)" %(solver/convergenceCriteria%);
    }
    pRefValue   0;
    pRefCell    0;
}

PIMPLE
{
    nOuterCorrectors 10;
    nNonOrthogonalCorrectors 2;
    nCorrectors         2;
    residualControl
    {
        U
        {
            tolerance   %(solver/convergenceCriteria%);
            relTol      0;
        }
        p
        {
            tolerance   %(solver/convergenceCriteria%);
            relTol      0;
        }
    }
    pRefValue   0;
    pRefCell    0;
}

potentialFlow
{
    nNonOrthogonalCorrectors 8;

    PhiRefValue 0;
    PhiRefCell 0;
}

%{%(physics/Time%)
%:Steady
relaxationFactors
{
    // Conservative settings to solve reliably on bad
    // meshes
    equations
    {
        U               0.6;
        ".*"            0.6;
    }
    fields
    {
        p               0.3;
    }
}

%}
cache
{
    grad(U);
}

