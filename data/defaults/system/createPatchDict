%{%(meshType%)
%:CfdMeshCart
%[_header%]
FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      createPatchDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

pointSync false;

// Patches to create.
patches
(

%{%(createPatches%)
    {
        name %(0%);

        patchInfo
        {
            type %(createPatches/%(0%)/PatchType%);
        }

        constructFrom patches;

        patches ( %(createPatches/%(0%)/PatchNamesList%) );
    }

%}

%{%(createPatchesSnappyBaffles%)
    {
        name cyclic01;
        patchInfo
        {
            type            cyclic;
            neighbourPatch  cyclic02;
            matchTolerance 1e-04;
        }
        constructFrom patches;
        patches (FRONT);
        hello world;
    }

    {
        name inlet;
        patchInfo
        {
            type cyclic;
            matchTolerance 1e-04;
            neighbourPatch outlet;
        }

        constructFrom patches;
        patches (inlet);
    }
    {
        name outlet;
        patchInfo
        {
            type cyclic;
            matchTolerance 1e-04;
            neighbourPatch inlet;
        }

        constructFrom patches;
        patches (outlet);
    }

%}
);


